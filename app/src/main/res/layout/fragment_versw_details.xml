<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.VerswDetailsFragment">


    <androidx.core.widget.NestedScrollView
        android:visibility="gone"
        android:id="@+id/viewse_detail_scrool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/kalash"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Shree Bhagvad Gita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/kalash"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:layout_marginStart="20dp"
                    android:src="@drawable/chakra"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
            </LinearLayout>
            <View
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:background="#d7d7d7"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/verses_number"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                tools:text="|| 1.6 ||"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/verse_slok"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                tools:text="।।1.1।।धर्मक्षेत्रे इत्यारभ्यस घोषो धार्तराष्ट्राणां 1।19 इत्यन्तं सम्बन्धः। अत्रैतदध्यायव्याख्या श्रीविठ्ठलेशप्रभुकृता बोध्या।"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/verse_meaning_one"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                tools:text="|| 1.6 ||"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/verse_meaning_two"

                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                tools:text="|| 1.6 ||"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:src="@drawable/verse_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Translation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <LinearLayout

                android:background="@drawable/bg_orange"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/verse_translation_author"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    tools:text="Author : Shubham Chauhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/verse_trasnlation"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="30dp"
                    tools:text="Author : Shubham Chauhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout

                android:layout_marginTop="-20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/verese_backword_translation"
                    android:background="@drawable/orange_circle"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/orange"
                    app:tint="@android:color/white"
                    app:srcCompat="@drawable/baseline_arrow_back_ios_24"
                    android:scaleType="center"
                    android:padding="0dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_gravity="end"
                    android:id="@+id/verse_forward_translation"
                    android:background="@drawable/orange_circle"
                    app:srcCompat="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:layout_marginBottom="2dp"
                    android:backgroundTint="@color/orange"
                    android:layout_marginEnd="10dp"
                    android:paddingHorizontal="10dp"
                    app:tint="@android:color/white"
                    android:paddingVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Commentry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <LinearLayout

                android:background="@drawable/bg_orange"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/verses_comentry_author"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="Author : Shubham Chauhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:id="@+id/verses_comentry"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="30dp"

                    tools:text="Author : Shubham Chauhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:visibility="gone"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="30dp"
                    android:text="Read More..."
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout

                android:layout_marginBottom="20dp"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:background="@drawable/orange_circle"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:id="@+id/verse_backword_commentry"
                    android:backgroundTint="@color/orange"
                    android:paddingVertical="10dp"
                    app:tint="@android:color/white"
                    android:visibility="gone"
                    app:srcCompat="@drawable/baseline_arrow_back_ios_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_gravity="end"
                    android:id="@+id/verse_forward_commentry"

                    android:background="@drawable/orange_circle"
                    app:srcCompat="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/orange"
                    android:layout_marginEnd="10dp"
                    android:paddingHorizontal="10dp"
                    app:tint="@android:color/white"
                    android:paddingVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/verse_Details_shimer"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/shimer_item_bg"/>
            <include layout="@layout/shimer_item_bg"/>
            <include layout="@layout/shimer_item_bg"/>
            <include layout="@layout/shimer_item_bg"/>
            <include layout="@layout/shimer_item_bg"/>
            <include layout="@layout/shimer_item_bg"/>
            <include layout="@layout/shimer_item_bg"/>
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>